{
    "lint": {
        "include": [
            "src/",
            "build/",
            "examples/"
        ],
        "exclude": [
            "third_party",
            "nix",
            "build/jsimgui.js",
            "examples/"
        ],
        "rules": {
            "tags": ["recommended"],
            "exclude": ["no-unused-vars"]
        }
    },

    "fmt": {
        "useTabs": false,
        "lineWidth": 100,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false,
        "proseWrap": "preserve"
    }
}
