{
    "name": "@mori2003/jsimgui",
    "version": "0.1.3",
    "exports": "./build/mod.js",
    "include": [
        "build/",
        ".npmrc",
        "deno.json",
        "deno.lock",
        "LICENSE",
        "package.json",
        "README.md"
    ],

    "lint": {
        "include": [
            "src/",
            "build/",
            "examples/"
        ],
        "exclude": [
            "third_party",
            "nix",
            "build/jsimgui.js",
            "examples/"
        ],
        "rules": {
            "tags": ["recommended"],
            "exclude": ["no-unused-vars"]
        }
    },

    "fmt": {
        "useTabs": false,
        "lineWidth": 100,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false,
        "proseWrap": "preserve"
    }
}
